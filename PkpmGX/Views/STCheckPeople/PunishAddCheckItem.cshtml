
@{
    ViewBag.Title = "PunishAddCheckItem";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}

<div class="layui-container">
    <div class="layui-row" id="customcompany-customedit-tableContainer">
        <form class="layui-form" action="" lay-filter="customcompany-customedit-form">
            <div class="layui-card">
                <div class="layui-form-item">
                    <label class="layui-form-label">处罚时间</label>
                    <div class="layui-input-block">
                        <input type="text" name="PunDate" id="PunDate" lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">处罚名称</label>
                    <div class="layui-input-block">
                        <input type="text" id="PunName" lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">处罚机构</label>
                    <div class="layui-input-block">
                        <input type="text" id="PunUnit" lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">处罚内容</label>
                    <div class="layui-input-block">
                        <input type="text" id="PunContent" lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" id="saveCheckItemAndParm">新增</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    layui.use(["laydate"], function () {
        var $ = layui.$,
            laydate = layui.laydate,
            router = layui.router();


        laydate.render({
            elem: '#PunDate',
        });

    });
    var index = parent.layer.getFrameIndex(window.name);
    $('#saveCheckItemAndParm').click(function () {
        var PunDate = $('#PunDate').val();
        var PunContent = $('#PunContent').val();
        var PunUnit = $('#PunUnit').val();
        var PunName = $('#PunName').val();


        if (PunDate === '') {
            parent.layer.msg('请填写处罚时间');
            return false;
        }
        if (PunName == '') {
            parent.layer.msg('请填写处罚名称');
            return;
        }
        if (PunUnit == '') {
            parent.layer.msg('请填写处罚单位');
            return;
        }
        if (PunContent == '') {
            parent.layer.msg('请填写处罚内容');
            return;
        }

        var str = '<tr><td data-CheckPeoplePunish="PunDate">' + PunDate + '</td><td data-CheckPeoplePunish="PunName">' + PunName + '</td><td data-CheckPeoplePunish="PunUnit">' + PunUnit + '</td><td data-CheckPeoplePunish="PunContent">' + PunContent + '</td><td>' + '<button class="layui-btn PunishCheckItems-table-table-btnDel">删除</button>' + '</td></tr>';
        parent.$('#PunishCheckItems-table  > tbody:last-child').append(str);
        parent.layer.close(index);
    });
</script>


