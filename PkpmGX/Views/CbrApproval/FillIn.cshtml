@model PkpmGX.Models.CBRUnitUIModel

@{
    ViewBag.Title = "FillIn";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}

<link href="~/static/layuiadmin/layui/css/formSelects-v4.css" rel="stylesheet" />

<div class="header_cq" style="height:10px">
</div>
<div class="layui-container">
    <div class="layui-row" id="FillIn-tableContainer">
        <form class="layui-form" action="" lay-filter="FillIn-form">
            <div class="layui-card">
                <div class="layui-card-header">初审表</div>
                <div class="layui-card-body">
                    <div class="layui-form-item">
                        <div class="layui-col-md12">
                            <label class="layui-form-label">初审编号<span style="color:red">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" name="csbh" id="csbh" lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                                <input type="text" name="pid" id="pid" value="@Model.pid" autocomplete="off" class="layui-hide">
                            </div>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-col-md12">
                            <label class="layui-form-label">初审内容<span style="color:red">*</span></label>
                            <div class="layui-input-block">
                                <textarea id="textarea" name="content"  autocomplete="off" class="layui-input"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-col-md12">
                            <div class="layui-input-block">
                                <center>
                                    <button class="layui-btn" lay-submit lay-filter="FillIn-save">保存</button>
                                </center>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>


<script>
    layui.config({
        base: '../../Static/layuiadmin/lib/' //静态资源所在路径
    }).extend({
        index: 'lib/index',
        formSelects: 'formSelects-v4'
    });

    layui.use(["form", "element", "layer", "table", "view", 'formSelects', 'upload', 'layedit', 'laydate'], function () {
        var $ = layui.$,
            form = layui.form,
            layer = layui.layer,
            table = layui.table,
            layedit = layui.layedit,
            view = layui.view,
            formSelects = layui.formSelects,
            element = layui.element,
            router = layui.router();


        form.on('submit(FillIn-save)', function (data) {

            var dataField = data.field;
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/CbrApproval/FillIn",
                data: dataField,
                success: function (d) {
                    if (d.IsSucc) {
                        layer.alert('保存成功', {
                            btn: ['确定'],
                            yes: function (index) {
                                layer.close(index);
                                window.parent.Hui_admin_close("/CbrApproval/FillIn/" + "@Model.id");
                            },

                            icon: 1
                        });
                    }
                    else {
                        layer.msg('保存失败，错误信息：' + d.ErroMsg, {
                            icon: 2
                        });
                    }
                }
            })

            return false;

        });

        //layedit.build('textarea');

    });




</script>

