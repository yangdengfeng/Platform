@model PkpmGX.Models.ApplyQualifyOneAuditViewModel

@{
    ViewBag.Title = "Audit";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}

<link href="~/static/layuiadmin/layui/css/formSelects-v4.css" rel="stylesheet" />

<div class="header_cq" style="height:10px">
</div>
<div class="layui-container">
    <div class="layui-row" id="audit-tableContainer">
        <form class="layui-form" action="" lay-filter="audit-form">
            <div class="layui-card">
                <div class="layui-form-item">
                    <label class="layui-form-label">受理编号<span style="color:red">*</span></label>
                    <div class="layui-input-block">
                        <input type="text" name="slbh" id="slbh"  value="@Model.slbh" lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                        <input type="text" name="PID" id="PID" value=@Model.pid placeholder="" autocomplete="off" class="layui-hide">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">受理时间<span style="color:red">*</span></label>
                    <div class="layui-input-block">
                        <input type="text" name="sltime" id="sltime"  autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <center>
                            <button class="layui-btn" lay-submit lay-filter="audit-save">保存</button>
                        </center>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    layui.config({
        base: '../../Static/layuiadmin/lib/' //静态资源所在路径
    }).extend({
        index: 'lib/index',
        formSelects: 'formSelects-v4'
    });

    layui.use(["form", "element", "layer", "table", "view", 'formSelects', 'upload', 'layedit', 'laydate'], function () {
        var $ = layui.$,
            form = layui.form,
            layer = layui.layer,
            table = layui.table,
            laydate = layui.laydate,
            layedit = layui.layedit,
            view = layui.view,
            formSelects = layui.formSelects,
            element = layui.element,
            router = layui.router();


        form.on('submit(audit-save)', function (data) {

            var dataField = data.field;
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/AddQualify/Audit",
                data: dataField,
                success: function (d) {
                    if (d.IsSucc) {
                        layer.alert('保存成功', {
                            btn: ['确定'],
                            yes: function (index) {
                                parent.layer.closeAll();
                                window.parent.location.reload();//刷新父页面
                            },

                            icon: 1
                        });
                    }
                    else {
                        layer.msg('保存失败，错误信息：' + d.ErroMsg, {
                            icon: 2
                        });
                    }
                }
            })

            return false;

        });


        laydate.render({
            elem: '#sltime',
            type: 'date',
            value: new Date(new Date())
        });
    });




</script>

