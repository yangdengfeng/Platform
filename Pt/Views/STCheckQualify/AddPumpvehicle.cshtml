
@{
    ViewBag.Title = "AddPumpvehicle";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}

<div class="layui-container">
    <div class="layui-row" id="STCheckQualify-AddPumpvehicle-Container">
        <form class="layui-form" action="" lay-filter="STCheckQualify-AddPumpvehicle-form">
            <div class="layui-card">
                <div class="layui-form-item">
                    <div class="layui-col6-md12">
                        <div class="layui-form-label">种类<font color="red">*</font></div>
                        <div class="layui-input-block">
                            <input type="text" name="variety" id="variety" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-col6-md12">
                        <div class="layui-form-label">高度<font color="red">*</font></div>
                        <div class="layui-input-block">
                            <input type="text" name="spec" id="spec" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-col6-md12">
                        <div class="layui-form-label">数量<font color="red">*</font></div>
                        <div class="layui-input-block">
                            <input type="text" name="num" id="num" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <button class="layui-btn" id="AddPumpvehicle">新增</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $('#AddPumpvehicle').on('click', function () {
        var index = parent.layer.getFrameIndex(window.name);
        var variety = $('#variety').val();
        var spec = $('#spec').val();
        var num = $('#num').val();

        if (variety == '') {
            parent.layer.msg('请填写型号');
            return false;
        }
        if (num == '') {
            parent.layer.msg('请填写数量');
            return false;
        }
        if (spec == '') {
            parent.layer.msg('生产效率');
            return false;
        }
        var str = '<tr><td data-Pumpvehicle="Variety">' + variety + '</td><td data-PumpSystem="Spec">' + spec + '</td><td data-PumpSystem="Num">' + num + '</td><td>' + '<button class="layui-btn editPumpSystem-table-btnDel">删除</button>' + '</td></tr>';
        parent.$('#editPumpvehicle-table  > tbody:last-child').append(str);
        parent.layer.close(index);
    });
</script>

