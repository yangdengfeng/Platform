@model PkpmGX.Models.SLKQDetailsModel
@{
    ViewBag.Title = "SLKQCheck";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}


<div class="layui-container">
    <form class="layui-form" lay-filter="InstBaseRecord-SLKQDetails-form">
        <table class="layui-table">

            <tbody>
                <tr>
                    <td>受检单位:</td>
                    <td colspan="3">
                        <select class="layui-input" name="CustomId" lay-search>
                            @{
                                foreach (var item in Model.allUnit)
                                {
                                    if (Model.slkqCheck.CustomId == item.Key)
                                    {
                                        <option value="@item.Key" selected>@item.Value</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Key" >@item.Value</option>

                                    }
                                }
                            }
                        </select>
                        <input type="hidden" name="Id" lay-skin="primary">
                    </td>
                </tr>
                <tr>
                    <td>
                        检测内容
                    </td>
                    <td colspan="2">
                        检测方法
                    </td>
                    <td>
                        存在问题
                    </td>
                </tr>
                <tr>
                    <td>
                        检测报告上传
                    </td>
                    <td>
                        <input type="checkbox" name="BGSCYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="BGSCNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="BGSCQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        抽样数量满足规范要求
                    </td>
                    <td>
                        <input type="checkbox" name="CYSLYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="CYSLNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="CYSLQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        报告编号连续 <br />
                        报告完整  <br />
                        报告结论正确

                    </td>
                    <td>
                        <input type="checkbox" name="BBWZYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="BBWZNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="BBWZQuestionQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        使用仪器设备在有效期
                    </td>
                    <td>
                        <input type="checkbox" name="YQYXYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="YQYXNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="YQYXQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        报告更改符合程序

                    </td>
                    <td>
                        <input type="checkbox" name="BGGGYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="BGGGNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="BGGGQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        按规定安装视频监控、资料保存期满足要求

                    </td>
                    <td>
                        <input type="checkbox" name="SPJKYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="SPJKNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="SPJKQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        不合格台账

                    </td>
                    <td>
                        <input type="checkbox" name="BUHGTZYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="BUHGTZNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="BUHGTZQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        <input type="text" name="Remark" required lay-verify="required" placeholder="备注" autocomplete="off" class="layui-input">
                    </td>

                </tr>
                <tr>
                    <td>
                        检查人员:
                    </td>
                    <td>
                        <input name="CheckPeople" class="layui-input" placeholder="检查人员" />
                    </td>
                    <td></td>

                    <td>检查时间:</td>
                    <td><input name="CHECKDate" id="checkTime" class="layui-input" placeholder="检查时间" /></td>
                </tr>
            </tbody>
        </table>
        <div class="layui-card">
            <div class="layui-card-body">
                <div class="layui-form-item">
                    <div style="text-align:center">
                        <button class="layui-btn" lay-submit lay-filter="InstBaseRecord-SLKQEdit-save">保存</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    layui.config({
        base: '../../static/layuiadmin/lib/' //静态资源所在路径
    }).extend({
        index: 'lib/index',
    });

    layui.use("form", function () {
        var $ = layui.$,
              form = layui.form;
        form.render();
        form.val('InstBaseRecord-SLKQDetails-form', {
            "Id":"@Model.slkqCheck.Id",
            "BGSCYes": "@Model.slkqCheck.BGSCYes" == "on" // "name": "value"
                 , "BGSCNo": "@Model.slkqCheck.BGSCNo"
                 , "BGSCQuestion": "@Model.slkqCheck.BGSCQuestion"
                 , "CYSLYes": "@Model.slkqCheck.CYSLYes" //复选框选中状态
                 , "CYSLNo": "@Model.slkqCheck.CYSLNo" //开关状态
                 , "CYSLQuestion": "@Model.slkqCheck.CYSLQuestion"
                 , "BBWZYes": "@Model.slkqCheck.BBWZYes"
                 , "BBWZNo": "@Model.slkqCheck.BBWZNo"
                 , "BBWZQuestionQuestion": "@Model.slkqCheck.BBWZQuestionQuestion"
                 , "YQYXYes": "@Model.slkqCheck.YQYXYes"
                 , "YQYXNo": "@Model.slkqCheck.YQYXNo"
                 , "YQYXQuestion": "@Model.slkqCheck.YQYXQuestion"
                 , "BGGGYes": "@Model.slkqCheck.BGGGYes"
                 , "BGGGNo": "@Model.slkqCheck.BGGGNo"
                 , "BGGGQuestion": "@Model.slkqCheck.BGGGQuestion"
                 , "SPJKYes": "@Model.slkqCheck.SPJKYes"
                 , "SPJKNo": "@Model.slkqCheck.SPJKNo"
                 , "SPJKQuestion": "@Model.slkqCheck.SPJKQuestion"
                 , "BUHGTZYes": "@Model.slkqCheck.BUHGTZYes"
                 , "BUHGTZNo": "@Model.slkqCheck.BUHGTZNo"
                 , "BUHGTZQuestion": "@Model.slkqCheck.BUHGTZQuestion"
                 , "Remark": "@Model.slkqCheck.Remark"
                 , "CheckPeople": "@Model.slkqCheck.CheckPeople"
                 , "CHECKDate": "@Model.slkqCheck.CHECKDate"
        })

        form.on('submit(InstBaseRecord-SLKQEdit-save)', function (data) {
            var dataField = data.field;
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/InstBaseRecord/SLKQEdit",
                data: dataField,
                success: function (d) {
                    if (d.IsSucc) {
                        layer.msg('室内空气检测记录编辑成功', {
                            btn: ['确定'],
                            yes: function (index) {
                                layer.close(index);
                                window.parent.Hui_admin_close("/InstBaseRecord/SLKQEdit/" + @Model.slkqCheck.Id);
                            },
                            icon: 1
                        });
                    }
                    else {
                        layer.msg('室内空气检测记录编辑失败，错误信息：' + d.ErroMsg, {
                            icon: 2
                        });
                    }
                }
            })

            return false;
        });
    });
</script>

