
@{
    ViewBag.Title = "QZSBCreate";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}

<div class="layui-container">
    <div class="layui-row" id="InstBaseRecord-ZTJGCreate-Container">
        <div class="layui-form" action="" lay-filter="InstBaseRecord-ZTJGCreate-form">
            <p style="text-align:center;font-size:22px">检测（试验）机构监督检查（网上）记录表</p>
            <table class="layui-table">
                <tbody>
                    <tr>
                        <td style="text-align:center" colspan="2">受检单位</td>
                        <td>
                            <select name="UnitName" lay-filter="UnitName" lay-search="">
                                <option value=""></option>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <option value="@item.Key">@item.Value</option>
                                    }
                                }
                            </select>
                        </td>
                        @*<td colspan="2"><input name="unitName" style="width:90%" /></td>*@
                    </tr>
                    <tr>
                        <td style="text-align:center">序号</td>
                        <td style="text-align:center">项目</td>
                        <td style="text-align:center">检查内容</td>
                        <td style="text-align:center">检查方法</td>
                        <td style="text-align:center">存在问题</td>
                    </tr>
                    <tr>
                        <td rowspan="5" style="text-align:center">八</td>
                        <td rowspan="5" style="text-align:center">起<br />重<br />设<br />备<br />检<br />测</td>
                        <td>检测报告上传</td>
                        <td>
                            <div class="layui-input-block">
                                <input type="radio" name="JCBGSCS" value="1" title="是"  checked="">
                                <input type="radio" name="JCBGSCS" value="0" title="否">
                            </div>
                        </td>
                        <td>
                            <input name="JCBGSCSQ" />
                        </td>
                    </tr>
                    <tr>
                        <td>报告编号连续<br />报告完整<br />报告结论正确</td>
                        <td>
                            <div class="layui-input-block">
                                <input type="radio" name="BGWZZQS" value="1" title="是" checked="">
                                <input type="radio" name="BGWZZQS" value="0" title="否">
                            </div>
                        </td>
                        <td><input name="BGWZZQQ" /></td>
                    </tr>
                    <tr>
                        <td>上传铭牌、现场及检测人员照片（共3张）</td>
                        <td>
                            <div class="layui-input-block">
                                <input type="radio" name="SCMPXCJCZPS" value="1" title="是"  checked="">
                                <input type="radio" name="SCMPXCJCZPS" value="0" title="否">
                            </div>
                        </td>
                        <td><input name="SCMPXCJCZPQ" /></td>
                    </tr>
                    <tr>
                        <td>上传工程概况及方案信息</td>
                        <td>
                            <div class="layui-input-block">
                                <input type="radio" name="SCGCGKFAXXS" value="1" title="是" checked="">
                                <input type="radio" name="SCGCGKFAXXS" value="0" title="否">
                            </div>
                        </td>
                        <td><input name="SCGCGKFAXXQ" /></td>
                    </tr>
                    <tr>
                        <td>使用仪器设备在有效期</td>
                        <td>
                            <div class="layui-input-block">
                                <input type="radio" name="SYYQSBZYXQS" value="1" title="是"  checked="">
                                <input type="radio" name="SYYQSBZYXQS" value="0" title="否">
                            </div>
                        </td>
                        <td><input name="SYYQSBZYXQQ" /></td>
                    </tr>
                   
                    <tr>
                        <td colspan="2" style="text-align:center">备注</td>
                        <td colspan="3"><input type="text" name="Remark" /></td>
                    </tr>
                    <tr>
                        <td colspan="3" style="text-align:center">检测人员：<input name="CheckPeople" /></td>
                        <td style="text-align:right">检测日期：</td>
                        <td><input type="text" name="CheckDate" id="CheckDate" autocomplete="off" class="layui-input"></td>

                    </tr>
                    <tr>
                        <td colspan="5">
                            <div class="layui-col-md1 layui-col-md-offset6">
                                <button class="layui-btn" lay-submit lay-filter="InstBaseRecord-ZTJGCreate-save">保存</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

<script>
    layui.config({
        base: '../../static/layuiadmin/lib/' //静态资源所在路径
    }).extend({
        index: 'lib/index',
    });

    layui.use(["form", "laydate"], function () {
        var $ = layui.$,
            laydate = layui.laydate,
        form = layui.form;
        laydate.render({
            elem:'#CheckDate'
        });
        form.on('submit(InstBaseRecord-ZTJGCreate-save)', function (data) {
            var dataField = data.field;
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/InstBaseRecord/ZTJGCreate",
                data: dataField,
                success: function (d) {
                    if (d.IsSucc) {
                        layer.msg('起重设备检测新增成功', {
                            btn: ['确定'],
                            yes: function (index) {
                                layer.close(index);
                                window.parent.Hui_admin_close("/InstBaseRecord/ZTJGCreate");
                            },
                            icon:1
                        });
                    }
                    else {
                        layer.msg('起重设备检测新增失败，错误信息：' + d.ErroMsg, {
                            icon: 2
                        });
                    }
                }
            })
            return false;
        })


        form.render();

    });
</script>

