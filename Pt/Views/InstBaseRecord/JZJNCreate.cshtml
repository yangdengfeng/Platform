<script>
    layui.config({
        base: '../../static/layuiadmin/lib/' //静态资源所在路径
    }).extend({
        index: 'lib/index',
    });

    layui.use(["form","laydate"], function () {
        var $ = layui.$,
            laydate = layui.laydate,
              form = layui.form;
        form.render();

        laydate.render({
            elem: "#checkTime"
        })
        form.on('submit(InstBaseRecord-JZJNCreate-save)', function (data) {
            var dataField = data.field;
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/InstBaseRecord/JZJNCreate",
                data: dataField,
                success: function (d) {
                    if (d.IsSucc) {
                        layer.msg('建筑节能检测记录表新增成功', {
                            btn: ['确定'],
                            yes: function (index) {
                                layer.close(index);
                                window.parent.Hui_admin_close("/InstBaseRecord/JZJNCreate/");
                            },
                            icon: 1
                        });
                    }
                    else {
                        layer.msg('建筑节能检测记录表新增失败，错误信息：' + d.ErroMsg, {
                            icon: 2
                        });
                    }
                }
            })

            return false;
        });
