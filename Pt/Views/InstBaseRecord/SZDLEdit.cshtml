@model PkpmGX.Models.SZDLDetailsModel
@{
    ViewBag.Title = "SZDLCheck";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}

<div class="layui-container">
    <form class="layui-form" lay-filter="InstBaseRecord-SZDLEdit-form">
        <table class="layui-table">

            <tbody>
                <tr>
                    <td>受检单位:</td>
                    <td colspan="3">
                        <select class="layui-input" name="CustomId" lay-search>
                            @{
                                foreach (var item in Model.allUnit)
                                {
                                    if (Model.szdlCheck.CustomId == item.Key)
                                    {
                                        <option value="@item.Key" selected>@item.Value</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Key">@item.Value</option>

                                    }
                                }
                            }
                        </select>
                        <input type="hidden" name="Id" lay-skin="primary">
                    </td>
                </tr>
                <tr>
                    <td>
                        检测内容
                    </td>
                    <td colspan="2">
                        检测方法
                    </td>
                    <td>
                        存在问题
                    </td>
                </tr>
                <tr>
                    <td>
                        取样及见证上传的信息符合要求
                    </td>
                    <td>
                        <input type="checkbox" name="JZQYYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="JZQYNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="JZQYQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>

                <tr>
                    <td>
                        报告编号连续 <br />
                        报告完整  <br />
                        报告结论正确

                    </td>
                    <td>
                        <input type="checkbox" name="BBWZYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="BBWZNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="BBWZQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        报告更改符合程序

                    </td>
                    <td>
                        <input type="checkbox" name="GGFHCXYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="GGFHCXNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="GGFHCXQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        按规定安装视频监控、资料保存期满足要求

                    </td>
                    <td>
                        <input type="checkbox" name="SPJKYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="SPJKNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="SPJKQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>
                        不合格台账

                    </td>
                    <td>
                        <input type="checkbox" name="BHGTZYes" lay-skin="primary">
                    </td>
                    <td>
                        <input type="checkbox" name="BHGTZNo" lay-skin="primary">
                    </td>
                    <td>
                        <input type="text" name="BHGTZQuestion" required lay-verify="required" placeholder="存在问题" autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        <input type="text" name="Remark" required lay-verify="required" placeholder="备注" autocomplete="off" class="layui-input">
                    </td>

                </tr>
                <tr>
                    <td>
                        检查人员:
                    </td>
                    <td>
                        <input name="CheckPeople" class="layui-input" placeholder="检查人员" />
                    </td>
                    <td></td>

                    <td>检查时间:</td>
                    <td><input name="CHECKDate" id="checkTime" class="layui-input" placeholder="检查时间" /></td>
                </tr>
            </tbody>
        </table>
        <div class="layui-card">
            <div class="layui-card-body">
                <div class="layui-form-item">
                    <div style="text-align:center">
                        <button class="layui-btn" lay-submit lay-filter="InstBaseRecord-SZDLEdit-save">保存</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    layui.config({
        base: '../../static/layuiadmin/lib/' //静态资源所在路径
    }).extend({
        index: 'lib/index',
    });

    layui.use("form", function () {
        var $ = layui.$,
              form = layui.form;
        form.render();
        form.val('InstBaseRecord-SZDLEdit-form', {
            "Id":"@Model.szdlCheck.Id",
            "JZQYYes": "@Model.szdlCheck.JZQYYes" == "on" // "name": "value"
               , "JZQYNo": "@Model.szdlCheck.JZQYNo"
               , "JZQYQuestion": "@Model.szdlCheck.JZQYQuestion"
               , "BBWZYes": "@Model.szdlCheck.BBWZYes" //复选框选中状态
               , "BBWZNo": "@Model.szdlCheck.BBWZNo" //开关状态
               , "BBWZQuestion": "@Model.szdlCheck.BBWZQuestion"
               , "GGFHCXYes": "@Model.szdlCheck.GGFHCXYes"
               , "GGFHCXNo": "@Model.szdlCheck.GGFHCXNo"
               , "GGFHCXQuestion": "@Model.szdlCheck.GGFHCXQuestion"
               , "SPJKYes": "@Model.szdlCheck.SPJKYes"
               , "SPJKNo": "@Model.szdlCheck.SPJKNo"
               , "SPJKQuestion": "@Model.szdlCheck.SPJKQuestion"
               , "BHGTZYes": "@Model.szdlCheck.BHGTZYes"
               , "BHGTZNo": "@Model.szdlCheck.BHGTZNo"
               , "BHGTZQuestion": "@Model.szdlCheck.BHGTZQuestion"
               , "Remark": "@Model.szdlCheck.Remark"
               , "CheckPeople": "@Model.szdlCheck.CheckPeople"
               , "CHECKDate": "@Model.szdlCheck.CHECKDate"
        })


        form.on('submit(InstBaseRecord-SZDLEdit-save)', function (data) {
            var dataField = data.field;
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/InstBaseRecord/SZDLEdit",
                data: dataField,
                success: function (d) {
                    if (d.IsSucc) {
                        layer.msg('市政道路记录表编辑成功', {
                            btn: ['确定'],
                            yes: function (index) {
                                layer.close(index);
                                window.parent.Hui_admin_close("/InstBaseRecord/JZJNEdit/" + @Model.szdlCheck.Id);
                            },
                            icon: 1
                        });
                    }
                    else {
                        layer.msg('市政道路记录表编辑失败，错误信息：' + d.ErroMsg, {
                            icon: 2
                        });
                    }
                }
            })

            return false;
        });
    });
</script>

