
@{
    ViewBag.Title = "BHChangeDetails";
    Layout = "~/Views/Shared/LayuiTab_Layout.cshtml";
}
<link href="~/Scripts/viewer.min.css" rel="stylesheet" />
<script src="~/Scripts/viewer.min.js"></script>

<div class="layui-container">
    <div class=" layui-form">
        <form class=" layui-form">
            <table class="layui-table" id="BHtable">
                <tr>
                    <td style="text-align:center">原始记录</td>
                    <td style="text-align:center">@Model.oldtime</td>
                    <td style="text-align:center">
                        <img data-original="@Model.oldphoto" src="@Model.oldphoto" title="点击可看大图" width="400px">
                    </td>
                </tr>
                @{
                    var index = 1;
                    foreach (var item in Model.BHChangeDetails.rows)
                    {
                        var i = "第" + index + "次变更";
                        <tr>
                            <td style="text-align:center">@i</td>
                            <td style="text-align:center">@item.newtime</td>
                            <td style="text-align:center">
                                <img data-original="@item.newphoto" src="@item.newphoto" title="点击可看大图" width="400px">
                            </td>
                        </tr>
                        index++;
                    }

                }
            </table>

        </form>
    </div>
</div>
<script>
    $('#BHtable').viewer({
        url: 'data-original',
        zIndexInline: 999,
    });


</script>